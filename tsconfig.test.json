{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist-test",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "types": ["node", "jest", "mocha", "@types/vscode"],
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/test/**/*",
    "src/core/**/*",
    "src/providers/**/*",
    "src/services/**/*",
    "src/types/**/*",
    "src/config/**/*",
    "src/utils/**/*",
    "test/**/*"
  ]
} 